<%- include('./partials/header') %>

<body>
  <div class="profile-container">
    <h1 class="title"><%= title %></h1>
    <div class="card">
      <h2>ðŸ‘¤ <%= user.username %></h2>
      <p><strong>Score:</strong> <%= user.score %></p>
      <p><strong>Plays Left:</strong> <%= user.plays %></p>
      <p><strong>Joined:</strong> <%= new Date(user.created_at).toLocaleDateString() %></p>
    </div>
    <form action="/logout" method="POST" style="margin-top: 1.5rem;">
      <button type="submit">Log Out</button>
    </form>
    <button onclick="setColor('linear-gradient(to right, white, #f64949)')">Light Background</button>
    <button onclick="setColor('linear-gradient(to right, #005F6B, #008C9E)')">Dark Background</button>
    <button onclick="setColor('url(/images/mater.png)')">Tow Mater</button>
  </div>
  
  <script>
    function setColor(color) {
      window.location.href = `/set-color?color=${encodeURIComponent(color)}`;
    }
  </script>
</body>

<style>
  .profile-container {
    max-width: 250px;
    margin: auto;
    text-align: center;
  }

  .card {
    background-color: lightblue;
    border-radius: 12px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    padding: 2rem;
    margin-top: 1rem;
  }

  h2 {
    color: black;
    margin-bottom: 0.5rem;
  }

  p {
    font-size: 1rem;
    margin: 0.5rem 0;
    color: #555;
  }

  button {
    background-color: #007bff;
    color: white;
    border: none;
    padding: 0.7rem 1.5rem;
    border-radius: 8px;
    cursor: pointer;
    font-size: 1rem;
    transition: background 0.3s ease;
  }

  button:hover {
    background-color: #0056b3;
  }
</style>
</html>
